[
  {
    "id": "page-metadata",
    "fields": [
      { "component": "text", "name": "title", "label": "Title" },
      { "component": "text", "name": "description", "label": "Description" },
      { "component": "reference", "name": "image", "label": "Image" },
      {
        "component": "text",
        "name": "robots",
        "label": "Robots",
        "description": "Index control via robots"
      }
    ]
  },
  {
    "id": "image",
    "fields": [
      { "component": "reference", "name": "image", "hidden": true },
      {
        "component": "reference",
        "name": "img:nth-child(3)[src]",
        "label": "Image"
      },
      {
        "component": "text",
        "name": "img:nth-child(3)[alt]",
        "label": "Alt Text"
      }
    ]
  },
  {
    "id": "section",
    "fields": [
      {
        "component": "multiselect",
        "name": "style",
        "label": "Style",
        "options": [{ "name": "Highlight", "value": "highlight" }]
      }
    ]
  },
  {
    "id": "accordion-item",
    "fields": [
      {
        "component": "richtext",
        "name": "div:nth-child(1)",
        "label": "Summary",
        "required": true
      },
      {
        "component": "richtext",
        "name": "div:nth-child(2)",
        "label": "Text",
        "required": true
      }
    ]
  },
  {
    "id": "card",
    "fields": [
      {
        "component": "reference",
        "name": "div:nth-child(1)>picture:nth-child(1)>img:nth-child(3)[src]",
        "label": "Image"
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>picture:nth-child(1)>img:nth-child(3)[alt]",
        "label": "Image Alt"
      },
      {
        "component": "richtext",
        "name": "div:nth-child(2)",
        "label": "Text"
      }
    ]
  },

  {
    "id": "card-fan",
    "fields": [
      {
        "component": "multifield",
        "name": "cards",
        "label": "Cards",
        "fields": [
          {
            "component": "reference",
            "name": "picture>img[src]",
            "label": "Image",
            "multi": false
          },
          {
            "component": "text",
            "name": "picture>img[alt]",
            "label": "Alt Text"
          }
        ]
      }
    ]
  },

  {
    "id": "carousel-item",
    "fields": [
      {
        "component": "reference",
        "name": "div:nth-child(1)>picture:nth-child(1)>img:nth-child(3)[src]",
        "label": "Background Image"
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>picture:nth-child(1)>img:nth-child(3)[alt]",
        "label": "Background Image Alt"
      },
      {
        "component": "richtext",
        "name": "div:nth-child(2)",
        "label": "Text"
      }
    ]
  },
  {
    "id": "columns",
    "fields": [
      {
        "component": "number",
        "name": "columns",
        "label": "Number of Columns",
        "value": 2,
        "validation": { "numberMin": 1, "numberMax": 6 }
      }
    ]
  },
  {
    "id": "fragment",
    "fields": [
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>p:nth-child(1)>a:nth-child(1)[href]",
        "label": "Fragment URL",
        "required": true
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>p:nth-child(1)>a:nth-child(1)",
        "label": "Fragment URL Text"
      }
    ]
  },
  {
    "id": "hero",
    "fields": [
      {
        "component": "reference",
        "name": "div:nth-child(1)>div:nth-child(1)>picture:nth-child(1)>img:nth-child(3)[src]",
        "label": "Image"
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>picture:nth-child(1)>img:nth-child(3)[alt]",
        "label": "Alt"
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>h1:nth-child(2)",
        "label": "Text"
      }
    ]
  },
  {
    "id": "quote",
    "fields": [
      {
        "component": "richtext",
        "name": "div:nth-child(1)>div:nth-child(1)",
        "label": "Quote",
        "required": true
      },
      {
        "component": "text",
        "name": "div:nth-child(2)>div:nth-child(1)>p:nth-child(1)",
        "label": "Author"
      }
    ]
  },
  {
    "id": "search",
    "fields": [
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>p:nth-child(1)>a:nth-child(1)[href]",
        "label": "Search URL",
        "required": true
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>p:nth-child(1)>a:nth-child(1)",
        "label": "Search URL Text"
      }
    ]
  },
  {
    "id": "tabs-item",
    "fields": [
      {
        "component": "text",
        "name": "div:nth-child(1)>p:nth-child(1)",
        "label": "Tab Name"
      },
      {
        "component": "richtext",
        "name": "div:nth-child(2)",
        "label": "Content"
      }
    ]
  },
  {
    "id": "video",
    "fields": [
      {
        "component": "boolean",
        "name": "classes_autoplay",
        "label": "Autoplay Video"
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>p:nth-child(1)>a:nth-child(1)[href]",
        "label": "Video URL",
        "required": true
      },
      {
        "component": "text",
        "name": "div:nth-child(1)>div:nth-child(1)>p:nth-child(1)>a:nth-child(1)",
        "label": "Video URL Text"
      },
      {
        "component": "reference",
        "name": "div:nth-child(1)>div:nth-child(1)>picture:nth-child(2)>img:nth-child(3)[src]",
        "label": "Poster Image"
      }
    ]
  }
]
